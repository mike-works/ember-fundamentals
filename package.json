{
  "name": "@mike-works/ember-fundamentals",
  "version": "0.0.0-development",
  "private": true,
  "description": "Mike Works, Inc. Ember Fundamentals Workshop",
  "license": "BSD-3-clause",
  "author": "Mike North <michael.l.north@gmail.com> (https://mike.works)",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "repository": "https://github.com/mike-works/ember-fundamentals",
  "scripts": {
    "build": "ember build",
    "lint:js": "eslint ./*.js app config lib server tests",
    "start": "ember serve",
    "test": "ember test",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@ember-decorators/babel-transforms": "^2.1.2",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.4",
    "@types/ember": "^3.0.25",
    "@types/ember-data": "^3.1.3",
    "broccoli-asset-rev": "^3.0.0",
    "ember-ajax": "^3.1.1",
    "ember-cli": "^3.5.0",
    "ember-cli-app-version": "^3.0.0",
    "ember-cli-babel": "^7.1.2",
    "ember-cli-dependency-checker": "^3.0.0",
    "ember-cli-eslint": "^4.2.1",
    "ember-cli-htmlbars": "^3.0.1",
    "ember-cli-htmlbars-inline-precompile": "^1.0.5",
    "ember-cli-inject-live-reload": "^2.0.1",
    "ember-cli-qunit": "^4.4.0",
    "ember-cli-shims": "^1.2.0",
    "ember-cli-sri": "^2.1.0",
    "ember-cli-uglify": "^2.0.0",
    "ember-data": "^3.5.0",
    "ember-decorators": "^2.5.2",
    "ember-export-application-global": "^2.0.0",
    "ember-load-initializers": "^2.0.0",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.1.0",
    "ember-resolver": "^5.0.1",
    "ember-source": "~3.5.1",
    "ember-welcome-page": "^3.2.0",
    "eslint-plugin-ember": "^5.0.0",
    "loader.js": "^4.2.3",
    "semantic-release": "^15.10.6",
    "travis-deploy-once": "^5.0.9"
  },
  "engines": {
    "node": "^4.5 || 6.* || >= 7.*"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
